@model FiscalInfoApp.Web.ViewModels.FuelDispenser.FuelDispenserInListViewModel

@{
    ViewData["Title"] = "Delete Fuel Dispenser";
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this Fuel Dispenser?</h3>
<div>
    <h4>FuelDispenser</h4>
    <hr />
    <table class="table table-striped col-md-6">
        <thead>
            <tr>
                <th scope="col">Parameter Name</th>
                <th scope="col">Parameter Value</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th><label>Dispenser Number</label></th>
                <td>@Model.DispenserNumber</td>
            </tr>
            <tr>
                <th><label>Dispenser Brand</label></th>
                <td>@Model.Brand</td>
            </tr>
            <tr>
                <th><label>Dispenser Model</label></th>
                <td>@Model.Model</td>
            </tr>
            <tr>
                <th><label>Count of Nozzles</label></th>
                <td>@Model.NozzleCount</td>
            </tr>
            <tr>
                <th><label>MID Certificate</label></th>
                <td>@Model.MidCertificate</td>
            </tr>
            <tr>
                <th><label>Petrol Station City</label></th>
                <td>@Model.PetrolStationCity</td>
            </tr>
        </tbody>
    </table>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="All">Back to List</a>
    </form>
</div>
