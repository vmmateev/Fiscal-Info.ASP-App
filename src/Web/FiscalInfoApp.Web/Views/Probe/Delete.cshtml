@model FiscalInfoApp.Web.ViewModels.Probe.ProbeInListViewModel

@{
    ViewData["Title"] = "Delete Probe";
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this Probe installed on Oil Level @Model.OilLevelModel in @Model.PetrolStationName?</h3>
<div>
    <h4>Probe</h4>
    <hr />
    <table class="table table-striped col-md-6">
        <thead>
            <tr>
                <th scope="col">Parameter Name</th>
                <th scope="col">Parameter Value</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th><label>Probe Length in [m]</label></th>
                <td>@Model.ProbeLength [m]</td>
            </tr>
            <tr>
                <th><label>Float Size in [mm]</label></th>
                <td>@Model.FloatSize [mm]</td>
            </tr>
            <tr>
                <th><label>Float fuel type</label></th>
                <td>@Model.FloatFuelType</td>
            </tr>
            <tr>
                <th><label>Tank number</label></th>
                <td>@Model.TankNumber</td>
            </tr>
            <tr>
                <th><label>Installed on OilLevel in Petrol Station Name</label></th>
                <td>@Model.PetrolStationName</td>
            </tr>
            <tr>
                <th><label>Installed on Oil Level Model</label></th>
                <td>@Model.OilLevelModel</td>
            </tr>
        </tbody>
    </table>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="All">Back to List Of Probes</a>
    </form>
</div>
