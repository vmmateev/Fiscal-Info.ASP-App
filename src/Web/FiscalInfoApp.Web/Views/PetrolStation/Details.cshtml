@model FiscalInfoApp.Web.ViewModels.PetrolStation.PetrolStationInListViewModel

@{
    ViewData["Title"] = "Petrol Station Details";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Petrol Station Details</h4>
    <hr />
    <table class="table table-striped col-md-6">
        <thead>
            <tr>
                <th scope="col">Parameter Name</th>
                <th scope="col">Parameter Value</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th><label>Company Name</label></th>
                <td>@Model.CompanyName</td>
            </tr>
            <tr>
                <th><label>Petrol Station City</label></th>
                <td>@Model.City</td>
            </tr>
            <tr>
                <th><label>Street</label></th>
                <td>@Model.Street</td>
            </tr>
            <tr>
                <th><label>Petrol Station Name</label></th>
                <td>@Model.Name</td>
            </tr>
            <tr>
                <th><label>Fiscal Printer Id</label></th>
                <td>@Model.FiscalPrinterOs</td>
            </tr>
            <tr>
                <th><label>Fiscal Printer Memory</label></th>
                <td>@Model.FiscalPrinterMemory</td>
            </tr>
            <tr>
                <th><label>Fiscal Sim Gsm</label></th>
                <td>+@Model.GsmNumber</td>
            </tr>
            <tr>
                <th><label>Fiscal FDRID</label></th>
                <td>@Model.Fdrid</td>
            </tr>
        </tbody>
    </table>
</div>
<div>
    <div class="col-md-4 align-self-center text-center">        
        <a asp-action="Stats">Back to Stats of Petrol Stations</a>
    </div>
</div>
