@model FiscalInfoApp.Web.ViewModels.CommDevice.CreateCommDeviceInputModel

@{
    ViewData["Title"] = "Create Communication Controller";
}

<h1>@ViewData["Title"]</h1>

<h4>Communication Controller</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CommType" class="control-label"></label>
                <input asp-for="CommType" class="form-control" />
                <span asp-validation-for="CommType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BoxColour" class="control-label"></label>
                <input asp-for="BoxColour" class="form-control" />
                <span asp-validation-for="BoxColour" class="text-danger"></span>
            </div>          
            <div class="form-check">
                <input asp-for="IsConcentrator" class="form-check-input" type="checkbox" value="true" id="flexCheckDefault">
                <label asp-for="IsConcentrator" class="form-check-label" for="flexCheckDefault">
                    Controller is Concentrator
                </label>
            </div>
            <div class="form-group">
                <label asp-for="PetrolStationId">Choose Petrol Station</label>
                <select asp-for="PetrolStationId" class="form-control">
                    @foreach (var petrolStation in Model.PetrolStationItems)
                    {
                        <option value="@petrolStation.Id">@petrolStation.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="All">Back to List of Communication Controllers</a>
</div>
